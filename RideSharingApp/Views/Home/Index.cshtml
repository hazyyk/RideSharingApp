@model List<RideSharingApp.Models.RideBooking>

@{
    ViewData["Title"] = "Home Page - RideSharingApp";
}

<div class="text-center">
    <h1 class="display-4">Welcome to RideSharingApp</h1>
    <p class="lead">Book rides, connect with drivers, and provide feedback with ease!</p>
    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <div>
            <a href="/Account/Register" class="btn btn-primary m-2">Register</a>
            <a href="/Account/Login" class="btn btn-secondary m-2">Login</a>
        </div>
    }
    else
    {
        <div>
            <a href="/RideBooking/Book" class="btn btn-success m-2">Book a Ride</a>
            @if (User.IsInRole("Driver")) // Assuming you'll add role-based logic later
            {
                <a href="/Driver/Dashboard" class="btn btn-info m-2">Driver Dashboard</a>
            }
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger m-2">Logout</button>
            </form>
        </div>
    }
    <p>Learn more about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>