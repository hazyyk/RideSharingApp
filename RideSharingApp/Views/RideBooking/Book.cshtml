@model RideSharingApp.Models.RideBookingViewModel
@{
    ViewData["Title"] = "Book a Ride";
}
<h2>Book a Ride</h2>
<form asp-action="Book" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PickupAddress" class="control-label"></label>
        <input asp-for="PickupAddress" class="form-control" />
        <span asp-validation-for="PickupAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PickupLatitude" class="control-label"></label>
        <input asp-for="PickupLatitude" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label asp-for="PickupLongitude" class="control-label"></label>
        <input asp-for="PickupLongitude" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label asp-for="DropoffAddress" class="control-label"></label>
        <input asp-for="DropoffAddress" class="form-control" />
        <span asp-validation-for="DropoffAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DropoffLatitude" class="control-label"></label>
        <input asp-for="DropoffLatitude" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label asp-for="DropoffLongitude" class="control-label"></label>
        <input asp-for="DropoffLongitude" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Book Ride</button>
    </div>
</form>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}